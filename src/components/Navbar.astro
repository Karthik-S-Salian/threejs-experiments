---
import { links } from "@lib/constants"
---
<aside>
    <h1><a href="/">ThreeJS Experiments</a></h1>
    
    <hr >
    <section>
        <ul>
            {links.map(link=>(
                <li><a href={link.url}>{link.name}</a></li>
            ))}
        </ul>
    </section>
    <hr>
</aside>



<style>
    aside{
        width: 18rem;
        height: 100vh;
        background-color: var(--primary);
        overflow-y: auto;
        padding: 1rem;
        position: sticky;
        top: 0%;
        left: 0%;
    }

    ul{
        display: flex;
        flex-direction: column;
        gap:1rem;
    }
</style>